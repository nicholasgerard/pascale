---
import Head from './Head.astro';
import '../styles/fonts.css';

interface Props {
	title?: string;
	description?: string;
	path?: string;
	currentPage?: string;
}

const {
	title = "Agissons Ensemble avec Pascale Richard",
	description = "Pascale Richard, conseillère des Français de l'étranger. Candidate aux élections consulaires 2026 pour NY-NJ-CT-Bermuda.",
	path = "/",
	currentPage = "accueil",
} = Astro.props;

const navItems = [
	{ href: "/", label: "Accueil", labelEn: "Home", id: "accueil" },
	{ href: "/la-liste", label: "La Liste", labelEn: "The Team", id: "la-liste" },
	{ href: "/programme", label: "Programme", labelEn: "Platform", id: "programme" },
	{ href: "/soutiens", label: "Soutiens", labelEn: "Supporters", id: "soutiens" },
	{ href: "/evenements", label: "Événements", labelEn: "Events", id: "evenements" },
	{ href: "/contact", label: "Contact", labelEn: "Contact", id: "contact" },
];
---

<html lang="fr" data-theme="auto">
	<head>
		<Head title={title} description={description} path={path} />
		<script is:inline>
			try{const t=localStorage.getItem('site-theme');if(t)document.documentElement.setAttribute('data-theme',t)}catch(e){}
		</script>
	</head>
	<body>
		<div class="tricolore-top" aria-hidden="true"></div>

		<a href="#main-content" class="skip-link" data-i18n data-i18n-fr="Aller au contenu principal" data-i18n-en="Skip to main content">Aller au contenu principal</a>

		<header role="banner">
			<div class="header-inner">
				<a href="/" class="logo-group" aria-label="Agissons Ensemble avec Pascale Richard — Accueil">
					<img src="/assets/logos/RENAISSANCE_monogramme_marine.png" alt="" class="header-logo" role="presentation" />
					<div class="logo-text">
						<span class="logo-title">Agissons Ensemble</span>
						<span class="logo-subtitle">avec Pascale Richard</span>
					</div>
				</a>

				<div class="header-right">
					<nav id="mainNav" aria-label="Navigation principale">
						<ul role="list">
							{navItems.map(item => (
								<li>
									<a href={item.href} class:list={[{ active: currentPage === item.id }]} data-fr={item.label} data-en={item.labelEn} aria-current={currentPage === item.id ? "page" : undefined}>
										{item.label}
									</a>
								</li>
							))}
						</ul>
						<div class="nav-footer">
							<a href="https://www.instagram.com/pascalevrichard" target="_blank" rel="noopener noreferrer">Instagram</a>
							<a href="mailto:contact@ensembleny2026.org" data-i18n data-i18n-fr="Nous écrire" data-i18n-en="Email us">Nous écrire</a>
							<p>&copy; 2026 Agissons Ensemble</p>
						</div>
					</nav>

					<button class="menu-toggle" id="menuToggle" aria-label="Ouvrir le menu" aria-expanded="false" aria-controls="mainNav">
						<span></span><span></span><span></span>
					</button>
				</div>
			</div>
		</header>

		<main id="main-content">
			<slot />
		</main>

		<footer role="contentinfo">
			<div class="footer-inner">
				<div class="footer-brand">
					<p class="footer-name">Agissons Ensemble</p>
					<p class="footer-subtitle">avec Pascale Richard</p>
				</div>
				<nav class="footer-nav" aria-label="Navigation pied de page">
					<a href="/la-liste" data-i18n data-i18n-fr="La Liste" data-i18n-en="The Team">La Liste</a>
					<a href="/programme" data-i18n data-i18n-fr="Programme" data-i18n-en="Platform">Programme</a>
					<a href="/soutiens" data-i18n data-i18n-fr="Soutiens" data-i18n-en="Supporters">Soutiens</a>
					<a href="/evenements" data-i18n data-i18n-fr="Événements" data-i18n-en="Events">Événements</a>
					<a href="/contact">Contact</a>
					<a href="https://www.instagram.com/pascalevrichard" target="_blank" rel="noopener noreferrer" aria-label="Instagram (nouvelle fenêtre)">Instagram<span class="sr-only" data-i18n data-i18n-fr=" (ouvre dans une nouvelle fenêtre)" data-i18n-en=" (opens in a new window)"> (ouvre dans une nouvelle fenêtre)</span></a>
				</nav>
				<div class="footer-bottom">
					<div class="footer-meta">
						<img src="/assets/logos/RENAISSANCE_logo-complet_marine.png" alt="" class="footer-logo" role="presentation" />
						<span class="footer-sep" aria-hidden="true"></span>
						<p class="footer-copy">&copy; 2026 &mdash; <span data-i18n data-i18n-fr="Élections consulaires" data-i18n-en="Consular Elections">Élections consulaires</span> NY &middot; NJ &middot; CT &middot; Bermuda</p>
					</div>
					<div id="footerControlsSlot" class="footer-controls-slot"></div>
				</div>
			</div>
			<div class="tricolore-bottom" aria-hidden="true"></div>
		</footer>

		<div class="floating-controls" id="floatingControls">
			<div class="lang-toggle" id="langToggle" role="group" aria-label="Changer de langue / Switch language">
				<button class="lang-option active" data-l="fr">FR</button>
				<button class="lang-option" data-l="en">EN</button>
			</div>
			<div class="theme-toggle" id="themeToggle" role="group" aria-label="Theme">
				<button class="theme-opt" data-t="light" aria-label="Light theme">
					<svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="5"/><line x1="12" y1="1" x2="12" y2="3"/><line x1="12" y1="21" x2="12" y2="23"/><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/><line x1="1" y1="12" x2="3" y2="12"/><line x1="21" y1="12" x2="23" y2="12"/><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/></svg>
				</button>
				<button class="theme-opt active" data-t="auto" aria-label="System theme">
					<svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M12 2a10 10 0 0 1 0 20V2z" fill="currentColor"/></svg>
				</button>
				<button class="theme-opt" data-t="dark" aria-label="Dark theme">
					<svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/></svg>
				</button>
			</div>
		</div>

		<script>
			// Language state
			let currentLang = 'fr';

			// Mobile menu toggle
			const toggle = document.getElementById('menuToggle');
			const nav = document.getElementById('mainNav');

			function closeMenu() {
				nav?.classList.remove('open');
				toggle?.classList.remove('open');
				toggle?.setAttribute('aria-expanded', 'false');
				toggle?.setAttribute('aria-label', currentLang === 'en' ? 'Open menu' : 'Ouvrir le menu');
				document.getElementById('navBackdrop')?.remove();
			}

			toggle?.addEventListener('click', () => {
				const isOpen = nav?.classList.contains('open');
				if (isOpen) {
					closeMenu();
				} else {
					nav?.classList.add('open');
					toggle.classList.add('open');
					toggle.setAttribute('aria-expanded', 'true');
					toggle.setAttribute('aria-label', currentLang === 'en' ? 'Close menu' : 'Fermer le menu');
					// Add backdrop
					const backdrop = document.createElement('div');
					backdrop.id = 'navBackdrop';
					backdrop.style.cssText = 'position:fixed;inset:0;z-index:999;background:rgba(0,0,0,0.3);';
					backdrop.addEventListener('click', closeMenu);
					document.body.appendChild(backdrop);
				}
			});

			// Close mobile nav on link click
			nav?.querySelectorAll('ul a').forEach(link => {
				link.addEventListener('click', closeMenu);
			});

			// Language toggle
			function setLang(lang: string) {
				currentLang = lang;
				document.documentElement.setAttribute('lang', lang);
				// Update elements with data-i18n attributes
				document.querySelectorAll('[data-i18n]').forEach(el => {
					const val = el.getAttribute(`data-i18n-${lang}`);
					if (val) el.textContent = val;
				});
				// Update nav labels
				document.querySelectorAll('nav a[data-fr]').forEach(a => {
					const text = a.getAttribute(`data-${lang}`);
					if (text) a.textContent = text;
				});
				// Update toggle highlight
				document.querySelectorAll('.lang-option').forEach(opt => {
					opt.classList.toggle('active', opt.getAttribute('data-l') === lang);
				});
				try { localStorage.setItem('site-lang', lang); } catch(e) {}
			}

			document.getElementById('langToggle')?.addEventListener('click', (e) => {
				const btn = (e.target as HTMLElement).closest('.lang-option');
				if (!btn) return;
				const lang = btn.getAttribute('data-l');
				if (lang) setLang(lang);
			});

			try {
				const saved = localStorage.getItem('site-lang');
				if (saved === 'en') setLang('en');
			} catch(e) {}

			// Theme toggle
			function setTheme(theme: string) {
				document.documentElement.setAttribute('data-theme', theme);
				document.querySelectorAll('.theme-opt').forEach(btn => {
					btn.classList.toggle('active', btn.getAttribute('data-t') === theme);
				});
				try { localStorage.setItem('site-theme', theme); } catch(e) {}
			}

			document.getElementById('themeToggle')?.addEventListener('click', (e) => {
				const btn = (e.target as HTMLElement).closest('.theme-opt');
				if (!btn) return;
				const theme = btn.getAttribute('data-t');
				if (theme) setTheme(theme);
			});

			// Initialize theme
			try {
				const savedTheme = localStorage.getItem('site-theme') || 'auto';
				setTheme(savedTheme);
			} catch(e) {
				setTheme('auto');
			}

			// Dock floating controls into footer when visible
			const floating = document.getElementById('floatingControls');
			const footerSlot = document.getElementById('footerControlsSlot');
			if (floating && footerSlot) {
				const observer = new IntersectionObserver((entries) => {
					entries.forEach(entry => {
						if (entry.isIntersecting) {
							footerSlot.appendChild(floating);
							floating.classList.add('docked');
						} else {
							document.body.appendChild(floating);
							floating.classList.remove('docked');
						}
					});
				}, { threshold: 0 });
				observer.observe(footerSlot);
			}
		</script>
	</body>
</html>

