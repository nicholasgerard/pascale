---
interface Props {
	title?: string;
	description?: string;
	path?: string;
}

const {
	title = "Agissons Ensemble avec Pascale Richard — Élections consulaires 2026",
	description = "Pascale Richard, conseillère des Français de l'étranger et candidate Renaissance pour la circonscription New York, New Jersey, Connecticut. Engagée depuis 2016 aux côtés des Français d'Amérique du Nord.",
	path = "",
} = Astro.props;

const canonicalUrl = `https://agissons2026.com${path}`;
const ogImage = "https://i0.wp.com/renaissance-fde.fr/wp-content/uploads/2025/12/1-RichardP-2.jpg?w=1920&ssl=1";
---

<meta charset="utf-8" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
<meta name="viewport" content="width=device-width, initial-scale=1" />

<title>{title}</title>
<meta name="description" content={description} />
<link rel="canonical" href={canonicalUrl} />

<!-- Open Graph -->
<meta property="og:type" content="website" />
<meta property="og:url" content={canonicalUrl} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImage} />
<meta property="og:image:width" content="1920" />
<meta property="og:image:height" content="1280" />
<meta property="og:locale" content="fr_FR" />
<meta property="og:site_name" content="Agissons Ensemble avec Pascale Richard" />

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImage} />

<!-- Additional meta -->
<meta name="author" content="Pascale Richard" />
<meta name="keywords" content="Pascale Richard, Renaissance, Français de l'étranger, New York, New Jersey, Connecticut, Bermuda, élections consulaires 2026, conseillère consulaire, Agissons Ensemble" />
<meta name="theme-color" content="#002395" />

<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-GXEPJP15RG" is:inline></script>
<script is:inline>
	window.dataLayer = window.dataLayer || [];
	function gtag(){dataLayer.push(arguments);}
	gtag('js', new Date());
	gtag('config', 'G-GXEPJP15RG');
</script>
