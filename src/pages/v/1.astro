				<line x1="45" y1="12" x2="55" y2="28" stroke="currentColor" stroke-width="1" stroke-linecap="round"/>
				<line x1="70" y1="12" x2="80" y2="28" stroke="currentColor" stroke-width="1" stroke-linecap="round"/>
				<line x1="95" y1="12" x2="105" y2="28" stroke="currentColor" stroke-width="1" stroke-linecap="round"/>
