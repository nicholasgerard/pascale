				<line x1="50" y1="15" x2="50" y2="35" stroke="currentColor" stroke-width="0.6"/>
				<line x1="100" y1="15" x2="100" y2="35" stroke="currentColor" stroke-width="0.6"/>
				<line x1="150" y1="15" x2="150" y2="35" stroke="currentColor" stroke-width="0.6"/>
				<line x1="200" y1="15" x2="200" y2="35" stroke="currentColor" stroke-width="0.6"/>
