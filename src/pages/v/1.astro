				<!-- Undercarriage -->
				<line x1="15" y1="60" x2="150" y2="60" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
				<!-- Wheels -->
				<circle cx="45" cy="62" r="10" stroke="currentColor" stroke-width="1.5" fill="none"/>
				<circle cx="45" cy="62" r="4" stroke="currentColor" stroke-width="0.8" fill="none"/>
				<circle cx="120" cy="62" r="10" stroke="currentColor" stroke-width="1.5" fill="none"/>
				<circle cx="120" cy="62" r="4" stroke="currentColor" stroke-width="0.8" fill="none"/>
				<!-- Taxi sign on roof -->
				<rect x="72" y="14" width="22" height="8" rx="2" stroke="currentColor" stroke-width="1" fill="none"/>
				<!-- Headlights -->
				<circle cx="148" cy="50" r="3" stroke="currentColor" stroke-width="1" fill="none"/>
				<circle cx="17" cy="50" r="3" stroke="currentColor" stroke-width="1" fill="none"/>
			</svg>

			<!-- SVG: Deli awning — top, spans width -->
			<svg class="svg-deco svg-awning" viewBox="0 0 600 60" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
				<!-- Awning scalloped edge -->
				<path d="M0 15 L0 35 Q25 55 50 35 Q75 55 100 35 Q125 55 150 35 Q175 55 200 35 Q225 55 250 35 Q275 55 300 35 Q325 55 350 35 Q375 55 400 35 Q425 55 450 35 Q475 55 500 35 Q525 55 550 35 Q575 55 600 35 L600 15" stroke="currentColor" stroke-width="1.5" fill="none"/>
