		<!-- ═══ CTA BOTTOM ═══ -->
		<section class="cta-bottom">
			<!-- SVG: NYC Skyline silhouette — left -->
			<svg class="svg-deco svg-skyline-left" viewBox="0 0 200 250" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
				<!-- Empire State Building silhouette -->
