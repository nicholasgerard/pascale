<style>
	:root {
		--blue: #002395;
		--red: #ED2939;
		--white: #FFFFFF;
		--text: #1A1A2E;
		--light: #F5F6FA;
	}

	* { margin: 0; padding: 0; box-sizing: border-box; }

	html {
		font-family: 'Maax', system-ui, sans-serif;
		color: var(--text);
		scroll-behavior: smooth;
	}

	.hero-banner {
		position: relative;
		min-height: 80vh;
		background: url('/assets/images/pascale.jpg') center top / cover no-repeat;
		display: flex;
		align-items: flex-end;
		justify-content: center;
	}

	.overlay {
		position: absolute;
		inset: 0;
		background: linear-gradient(to top, rgba(0,35,149,0.92) 0%, rgba(0,35,149,0.4) 50%, transparent 100%);
	}

	.hero-content {
		position: relative;
		z-index: 1;
		text-align: center;
		padding: 4rem 2rem;
		max-width: 700px;
	}

	.top-logo {
		height: 24px;
		margin-bottom: 2rem;
		opacity: 0.85;
	}

	.hero-content h1 {
		font-size: clamp(2.5rem, 7vw, 5rem);
		font-weight: 700;
		color: var(--white);
		line-height: 1.05;
		margin-bottom: 0.75rem;
	}

	.subtitle {
		font-size: clamp(1rem, 2.5vw, 1.375rem);
		color: rgba(255,255,255,0.85);
		margin-bottom: 2.5rem;
	}

	.buttons { display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap; }

	.cta {
		display: inline-block;
		padding: 0.875rem 2.25rem;
		border-radius: 4px;
		font-weight: 700;
		font-size: 1rem;
		text-decoration: none;
		transition: all 0.2s;
		background: var(--red);
		color: var(--white);
	}

	.cta:hover { background: #c4212f; }

	.cta.ghost {
		background: transparent;
		color: var(--white);
		border: 2px solid rgba(255,255,255,0.6);
	}

	.cta.ghost:hover {
		background: var(--white);
		color: var(--blue);
		border-color: var(--white);
	}

	/* Bio section */
	.bio {
		padding: 5rem 2rem;
	}

	.bio .container {
		max-width: 900px;
		margin: 0 auto;
		display: flex;
		gap: 3rem;
		align-items: center;
	}

	.portrait {
		width: 200px;
		height: 200px;
		border-radius: 50%;
		object-fit: cover;
		object-position: center top;
		border: 4px solid var(--blue);
		flex-shrink: 0;
	}

	.bio-text h2 {
		font-size: 1.75rem;
		color: var(--blue);
		margin-bottom: 1rem;
	}

	.bio-text p {
		font-size: 1.0625rem;
		line-height: 1.7;
		color: #444;
		margin-bottom: 0.75rem;
	}

	/* Priorities */
	.priorities {
		background: var(--light);
		padding: 5rem 2rem;
	}

	.priorities .container {
		max-width: 900px;
		margin: 0 auto;
	}

	.priorities h2 {
		text-align: center;
		font-size: 1.75rem;
		color: var(--blue);
		margin-bottom: 3rem;
	}

	.priority-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
		gap: 2rem;
	}

	.priority-card {
		background: var(--white);
		padding: 2rem;
		border-radius: 8px;
		box-shadow: 0 2px 12px rgba(0,0,0,0.06);
	}

	.icon { font-size: 2rem; display: block; margin-bottom: 0.75rem; }

	.priority-card h3 {
		font-size: 1.125rem;
		color: var(--blue);
		margin-bottom: 0.5rem;
	}

	.priority-card p {
		font-size: 0.9375rem;
		line-height: 1.6;
		color: #555;
	}

