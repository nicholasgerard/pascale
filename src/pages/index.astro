---
const title = "Pascale Richard — Ensemble pour NY 2026";
const description = "Pascale Richard, candidate aux élections législatives 2026. Ensemble, construisons l'avenir de notre circonscription.";
---

<html lang="fr">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="description" content={description} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://ensembleny2026.org" />
		<title>{title}</title>
	</head>
	<body>
		<main>
			<div class="hero">
				<p class="overline">Ensemble pour NY 2026</p>
				<h1>Pascale Richard</h1>
				<p class="tagline">Construisons l'avenir, ensemble.</p>
				<a href="#contact" class="cta">Rejoignez le mouvement</a>
			</div>
		</main>
		<footer>
			<p>&copy; 2026 Pascale Richard &mdash; Ensemble pour NY 2026</p>
		</footer>
	</body>
</html>

<style>
	:root {
		--blue: #002395;
		--red: #ED2939;
		--white: #FFFFFF;
		--light: #F5F6FA;
		--text: #1A1A2E;
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		font-family: system-ui, -apple-system, 'Segoe UI', Roboto, sans-serif;
		color: var(--text);
		scroll-behavior: smooth;
	}

	body {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}

	main {
		flex: 1;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.hero {
		text-align: center;
		padding: 2rem;
		max-width: 640px;
	}

	.overline {
		text-transform: uppercase;
		letter-spacing: 0.15em;
		font-size: 0.875rem;
		color: var(--blue);
		font-weight: 600;
		margin-bottom: 1rem;
	}

	h1 {
		font-size: clamp(2.5rem, 6vw, 4.5rem);
		font-weight: 800;
		line-height: 1.1;
		color: var(--blue);
		margin-bottom: 1rem;
	}

	.tagline {
		font-size: clamp(1.125rem, 2.5vw, 1.5rem);
		color: #555;
		margin-bottom: 2.5rem;
	}

	.cta {
		display: inline-block;
		background: var(--red);
		color: var(--white);
		padding: 0.875rem 2.5rem;
		border-radius: 4px;
		text-decoration: none;
		font-weight: 600;
		font-size: 1.0625rem;
		transition: background 0.2s;
	}

	.cta:hover {
		background: #c4212f;
	}

	footer {
		text-align: center;
		padding: 2rem;
		font-size: 0.8125rem;
		color: #888;
		border-top: 1px solid #eee;
	}
</style>
