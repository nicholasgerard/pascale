---
const title = "Pascale Richard — Ensemble pour NY 2026";
const description = "Pascale Richard, candidate aux élections législatives 2026. Ensemble, construisons l'avenir de notre circonscription.";
---

<html lang="fr">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="description" content={description} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://ensembleny2026.org" />
		<title>{title}</title>
	</head>
	<body>
		<main>
			<div class="hero">
				<img
					src="/assets/images/pascale.jpg"
					alt="Pascale Richard"
					class="portrait"
				/>
				<p class="overline">Ensemble pour NY 2026</p>
				<h1>Pascale Richard</h1>
				<p class="tagline">Construisons l'avenir, ensemble.</p>
				<div class="buttons">
					<a href="https://www.instagram.com/pascalevrichard" target="_blank" rel="noopener noreferrer" class="cta">Suivez-nous sur Instagram</a>
					<a href="https://renaissance-fde.fr/portrait-dune-elue-a-votre-service-pascale-richard-new-york/" target="_blank" rel="noopener noreferrer" class="cta secondary">Découvrir Pascale</a>
				</div>
			</div>
		</main>
		<footer>
			<img
				src="/assets/logos/RENAISSANCE_logo-complet_marine.png"
				alt="Renaissance — Française et Européenne"
				class="footer-logo"
			/>
			<p>&copy; 2026 Pascale Richard &mdash; Ensemble pour NY 2026</p>
		</footer>
	</body>
</html>

<style>
	@font-face {
		font-family: 'Maax';
		src: url('/assets/fonts/Maax-Regular.otf') format('opentype');
		font-weight: 400;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: 'Maax';
		src: url('/assets/fonts/Maax-Italic.otf') format('opentype');
		font-weight: 400;
		font-style: italic;
		font-display: swap;
	}

	@font-face {
		font-family: 'Maax';
		src: url('/assets/fonts/Maax-Bold.otf') format('opentype');
		font-weight: 700;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: 'Maax';
		src: url('/assets/fonts/Maax-BoldItalic.otf') format('opentype');
		font-weight: 700;
		font-style: italic;
		font-display: swap;
	}

	:root {
		--blue: #002395;
		--red: #ED2939;
		--white: #FFFFFF;
		--light: #F5F6FA;
		--text: #1A1A2E;
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		font-family: 'Maax', system-ui, -apple-system, 'Segoe UI', Roboto, sans-serif;
		color: var(--text);
		scroll-behavior: smooth;
	}

	body {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}

	main {
		flex: 1;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.hero {
		text-align: center;
		padding: 2rem;
		max-width: 640px;
	}

	.portrait {
		width: 160px;
		height: 160px;
		border-radius: 50%;
		object-fit: cover;
		object-position: center top;
		margin-bottom: 1.5rem;
		border: 4px solid var(--blue);
		box-shadow: 0 4px 24px rgba(0, 35, 149, 0.15);
	}

	.overline {
		text-transform: uppercase;
		letter-spacing: 0.15em;
		font-size: 0.875rem;
		color: var(--blue);
		font-weight: 700;
		margin-bottom: 1rem;
	}

	h1 {
		font-family: 'Maax', system-ui, sans-serif;
		font-size: clamp(2.5rem, 6vw, 4.5rem);
		font-weight: 700;
		line-height: 1.1;
		color: var(--blue);
		margin-bottom: 1rem;
	}

	.tagline {
		font-size: clamp(1.125rem, 2.5vw, 1.5rem);
		color: #555;
		margin-bottom: 2.5rem;
	}

	.cta {
		display: inline-block;
		background: var(--red);
		color: var(--white);
		padding: 0.875rem 2.5rem;
		border-radius: 4px;
		text-decoration: none;
		font-weight: 700;
		font-size: 1.0625rem;
		transition: background 0.2s, color 0.2s;
	}

	.cta:hover {
		background: #c4212f;
	}

	.cta.secondary {
		background: transparent;
		color: var(--blue);
		border: 2px solid var(--blue);
	}

	.cta.secondary:hover {
		background: var(--blue);
		color: var(--white);
	}

	.buttons {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	footer {
		text-align: center;
		padding: 2rem;
		font-size: 0.8125rem;
		color: #888;
		border-top: 1px solid #eee;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1rem;
	}

	.footer-logo {
		height: 28px;
		width: auto;
		opacity: 0.7;
	}
</style>
