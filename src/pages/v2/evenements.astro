<style>
	/* ‚îÄ‚îÄ‚îÄ PAGE HEADER ‚îÄ‚îÄ‚îÄ */
	.page-header {
		background: var(--navy-deep);
		color: var(--white);
		text-align: center;
		padding: 4rem 2rem 3.5rem;
	}

	.election-label {
		text-transform: uppercase;
		letter-spacing: 0.25em;
		font-size: 0.6875rem;
		font-weight: 700;
		color: rgba(255, 255, 255, 0.4);
		margin-bottom: 1rem;
	}

	.page-header h1 {
		font-size: clamp(2.25rem, 5vw, 3.5rem);
		font-weight: 700;
		letter-spacing: 0.06em;
		text-transform: uppercase;
		margin-bottom: 0.5rem;
	}

	.page-subtitle {
		font-size: 1.0625rem;
		color: rgba(255, 255, 255, 0.6);
		font-style: italic;
	}

	/* ‚îÄ‚îÄ‚îÄ EVENTS SECTION ‚îÄ‚îÄ‚îÄ */
	.events-section {
		padding: 4rem 0;
		background: var(--off-white);
	}

	.coming-soon-card {
		background: var(--white);
		border: 1px solid var(--border);
		padding: 4rem 3rem;
		text-align: center;
		position: relative;
	}

	.coming-soon-card::before {
		content: '';
		position: absolute;
		top: -1px;
		left: 0;
		right: 0;
		height: 3px;
		background: linear-gradient(90deg, var(--navy), var(--red));
	}

	.coming-soon-badge {
		display: inline-block;
		background: var(--light);
		color: var(--navy);
		font-size: 0.75rem;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 0.15em;
		padding: 0.5rem 1.25rem;
		margin-bottom: 1.5rem;
		border: 1px solid var(--border);
	}

	.coming-soon-card h2 {
		font-size: 1.375rem;
		color: var(--navy);
		line-height: 1.5;
		margin-bottom: 1rem;
		font-weight: 700;
	}

	.coming-soon-card p {
		font-size: 1rem;
		line-height: 1.75;
		color: var(--muted);
		margin-bottom: 2rem;
		max-width: 460px;
		margin-left: auto;
		margin-right: auto;
	}

	/* Future event card styles */
	.event-card {
		display: grid;
		grid-template-columns: 80px 1fr;
		gap: 1.5rem;
		background: var(--white);
		border: 1px solid var(--border);
		padding: 1.75rem;
		margin-bottom: 1rem;
	}

	.event-date {
		text-align: center;
		padding-top: 0.25rem;
	}

	.event-day {
		display: block;
		font-size: 2rem;
		font-weight: 700;
		color: var(--navy);
		line-height: 1;
	}

	.event-month {
		display: block;
		font-size: 0.75rem;
		font-weight: 700;
		color: var(--red);
		text-transform: uppercase;
		letter-spacing: 0.15em;
	}

	.event-info h3 {
		font-size: 1.125rem;
		color: var(--navy);
		font-weight: 700;
		margin-bottom: 0.375rem;
	}

	.event-location {
		font-size: 0.875rem;
		color: var(--muted);
		margin-bottom: 0.5rem;
	}

	.event-desc {
		font-size: 0.9375rem;
		line-height: 1.7;
		color: var(--muted);
	}

	/* ‚îÄ‚îÄ‚îÄ STAY CONNECTED ‚îÄ‚îÄ‚îÄ */
	.stay-connected {
		padding: 4rem 0;
		background: var(--white);
	}

	.connect-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 1.5rem;
		max-width: 500px;
		margin: 0 auto;
	}

	.connect-card {
		background: var(--off-white);
		border: 1px solid var(--border);
		padding: 2rem 1.5rem;
		text-align: center;
		text-decoration: none;
		transition: transform 0.2s ease, box-shadow 0.2s ease;
	}

	.connect-card:hover {
		transform: translateY(-2px);
		box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
	}

	.connect-icon {
		display: block;
		font-size: 1.5rem;
		margin-bottom: 0.75rem;
		color: var(--red);
	}

	.connect-card h3 {
		font-size: 1rem;
		color: var(--navy);
		font-weight: 700;
		margin-bottom: 0.25rem;
	}

	.connect-card p {
		font-size: 0.875rem;
		color: var(--muted);
	}

	/* ‚îÄ‚îÄ‚îÄ CTA ‚îÄ‚îÄ‚îÄ */
	.cta-section {
		background: var(--navy-deep);
		color: var(--white);
		text-align: center;
		padding: 4rem 0;
	}

	.cta-section h2 {
		font-size: clamp(1.5rem, 3vw, 2rem);
		margin-bottom: 0.75rem;
		text-transform: uppercase;
		letter-spacing: 0.06em;
	}

	.cta-section p {
		color: rgba(255, 255, 255, 0.55);
		font-size: 1rem;
		font-style: italic;
		margin-bottom: 2rem;
	}

	.cta-buttons {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	/* ‚îÄ‚îÄ‚îÄ RESPONSIVE ‚îÄ‚îÄ‚îÄ */
	@media (max-width: 640px) {
		.coming-soon-card {
			padding: 3rem 1.5rem;
		}

		.connect-grid {
			grid-template-columns: 1fr;
		}

		.page-header {
			padding: 3rem 1.5rem 2.5rem;
		}

		.cta-buttons {
			flex-direction: column;
			align-items: center;
		}
	}
</style>
