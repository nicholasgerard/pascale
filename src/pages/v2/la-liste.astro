---
import Layout from '../../components/v2/Layout.astro';

const members = [
	{ name: "Pascale Richard", role: "Tête de liste", initials: "PR", headshot: "pascale", accent: true },
	{ name: "Yvan Bedouet", role: "", initials: "YB", headshot: "yvan" },
	{ name: "Isabelle Bonneau", role: "", initials: "IB", headshot: "isabelle" },
	{ name: "Luis Honsel", role: "", initials: "LH", headshot: "luis" },
	{ name: "Aissata Fernandez Taranco", role: "", initials: "AF", headshot: "aissata" },
	{ name: "Gaël Lambert", role: "", initials: "GL", headshot: "gael" },
	{ name: "Liliane Rubin", role: "", initials: "LR", headshot: "liliane" },
	{ name: "Jean-Paul Le Boucher", role: "", initials: "JL", headshot: "jeanpaul" },
	{ name: "Martine Rubenstein", role: "", initials: "MR", headshot: "martine" },
	{ name: "Jean-Luc Streiff", role: "", initials: "JS", headshot: "jeanluc" },
	{ name: "Line Malha", role: "", initials: "LM", headshot: "line" },
	{ name: "Guillaume Haeringer", role: "", initials: "GH", headshot: "guillaume" },
	{ name: "Nicole Devilaine", role: "", initials: "ND", headshot: "nicole" },
	{ name: "Joseph Papin", role: "", initials: "JP", headshot: "joseph" },
];
---

<Layout
	title="La Liste — Agissons Ensemble avec Pascale Richard"
	description="Découvrez les 14 membres de la liste Agissons Ensemble pour les élections consulaires 2026 NY-NJ-CT-Bermuda."
	path="/v2/la-liste"
	currentPage="la-liste"
>
	<!-- ═══ PAGE HEADER ═══ -->
	<section class="page-header">
		<div class="container">
			<p class="election-label" data-i18n data-i18n-fr="Élections consulaires 2026" data-i18n-en="Consular Elections 2026">Élections consulaires 2026</p>
			<h1 data-i18n data-i18n-fr="La Liste" data-i18n-en="The Team">La Liste</h1>
			<p class="page-subtitle">Agissons Ensemble avec Pascale Richard</p>
			<p class="page-desc" data-i18n data-i18n-fr="14 candidats engagés pour représenter les Français de New York, New Jersey, Connecticut et des Bermudes." data-i18n-en="14 committed candidates to represent French citizens in New York, New Jersey, Connecticut and Bermuda.">14 candidats engagés pour représenter les Français de New York, New Jersey, Connecticut et des Bermudes.</p>
		</div>
	</section>

	<!-- ═══ LIST PHOTO ═══ -->
	<section class="list-photo">
		<div class="container">
			<div class="photo-banner">
				<img src="/assets/images/hero-banner.jpg" alt="The Agissons Ensemble team — the 14 candidates for the 2026 consular elections" />
			</div>
		</div>
	</section>

	<!-- ═══ TEAM GRID ═══ -->
	<section class="team-section" aria-labelledby="team-heading">
		<div class="container">
			<div class="section-header">
				<span class="section-rule" aria-hidden="true"></span>
				<p class="section-label" data-i18n data-i18n-fr="Nos candidats" data-i18n-en="Our candidates">Nos candidats</p>
				<span class="section-rule" aria-hidden="true"></span>
			</div>
			<h2 id="team-heading" class="section-title" data-i18n data-i18n-fr="Les membres de la liste" data-i18n-en="Team members">Les membres de la liste</h2>

			<!-- Head of list - featured -->
			<article class="featured-member">
				<div class="featured-photo">
					<img src="/assets/images/headshots/pascale.jpeg" alt="Pascale Richard" />
				</div>
				<div class="featured-info">
					<span class="member-badge" data-i18n data-i18n-fr="Tête de liste" data-i18n-en="Head of list">Tête de liste</span>
					<h3>Pascale Richard</h3>
					<p class="member-role" data-i18n data-i18n-fr="Conseillère des Français de l'étranger" data-i18n-en="Councillor for French citizens abroad">Conseillère des Français de l'étranger</p>
					<p class="member-bio" data-i18n data-i18n-fr="Installée à New York depuis plus de 25 ans. Journaliste, rédactrice en chef de France Amérique, puis directrice des événements culturels au Lycée Français de New York. Engagée depuis 2016 avec En Marche, élue conseillère des Français de l'étranger en 2021, suppléante de Roland Lescure." data-i18n-en="Based in New York for over 25 years. Journalist, editor-in-chief of France Amérique, then director of cultural events at the Lycée Français de New York. Committed since 2016 with En Marche, elected councillor for French citizens abroad in 2021, deputy to Roland Lescure.">
						Installée à New York depuis plus de 25 ans. Journaliste, rédactrice en chef de France Amérique, puis directrice des événements culturels au Lycée Français de New York. Engagée depuis 2016 avec En Marche, élue conseillère des Français de l'étranger en 2021, suppléante de Roland Lescure.
					</p>
				</div>
			</article>

			<!-- Other members grid -->
			<ul class="members-grid" role="list">
				{members.slice(1).map((member) => (
					<li class="member-card">
						<div class="member-avatar">
							<img src={`/assets/images/headshots/${member.headshot}.jpeg`} alt={member.name} />
						</div>
						<h4>{member.name}</h4>
					</li>
				))}
			</ul>
		</div>
	</section>

	<!-- ═══ CTA ═══ -->
	<section class="cta-section">
		<div class="container">
			<h2 data-i18n data-i18n-fr="Rejoignez-nous" data-i18n-en="Join us">Rejoignez-nous</h2>
			<p data-i18n data-i18n-fr="Découvrez notre programme et nos engagements pour la communauté française." data-i18n-en="Discover our platform and our commitments to the French community.">Découvrez notre programme et nos engagements pour la communauté française.</p>
			<div class="cta-buttons">
				<a href="/v2/programme" class="btn btn-primary" data-i18n data-i18n-fr="Notre programme" data-i18n-en="Our platform">Notre programme</a>
				<a href="/v2/soutiens" class="btn btn-ghost-light" data-i18n data-i18n-fr="Nos soutiens" data-i18n-en="Our supporters">Nos soutiens</a>
			</div>
		</div>
	</section>
</Layout>

<style>
	/* ─── PAGE HEADER ─── */
	.page-header {
		background: var(--navy-deep);
		color: var(--white);
		text-align: center;
		padding: 4rem 2rem 3.5rem;
	}

	.election-label {
		text-transform: uppercase;
		letter-spacing: 0.25em;
		font-size: 0.6875rem;
		font-weight: 700;
		color: rgba(255, 255, 255, 0.4);
		margin-bottom: 1rem;
	}

	.page-header h1 {
		font-size: clamp(2.25rem, 5vw, 3.5rem);
		font-weight: 700;
		letter-spacing: 0.06em;
		text-transform: uppercase;
		margin-bottom: 0.5rem;
	}

	.page-subtitle {
		font-size: 1.125rem;
		color: rgba(255, 255, 255, 0.65);
		font-style: italic;
		margin-bottom: 1rem;
	}

	.page-desc {
		font-size: 0.9375rem;
		color: rgba(255, 255, 255, 0.45);
		max-width: 520px;
		margin: 0 auto;
		line-height: 1.7;
	}

	/* ─── LIST PHOTO ─── */
	.list-photo {
		padding: 3rem 0 0;
		background: var(--off-white);
	}

	.photo-banner {
		max-width: 900px;
		margin: 0 auto;
		overflow: hidden;
		border: 1px solid var(--border);
	}

	.photo-banner img {
		width: 100%;
		height: auto;
		display: block;
		object-fit: cover;
	}

	/* ─── TEAM SECTION ─── */
	.team-section {
		padding: 4rem 0 5rem;
		background: var(--off-white);
	}

	/* ─── FEATURED MEMBER ─── */
	.featured-member {
		display: grid;
		grid-template-columns: 240px 1fr;
		gap: 2.5rem;
		background: var(--white);
		border: 1px solid var(--border);
		padding: 2.5rem;
		margin-bottom: 3rem;
		position: relative;
	}

	.featured-member::before {
		content: '';
		position: absolute;
		top: -1px;
		left: 0;
		right: 0;
		height: 3px;
		background: linear-gradient(90deg, var(--navy), var(--red));
	}

	.featured-photo img {
		width: 100%;
		aspect-ratio: 3 / 4;
		object-fit: cover;
		object-position: center top;
	}

	.member-badge {
		display: inline-block;
		background: var(--red);
		color: var(--white);
		font-size: 0.6875rem;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 0.12em;
		padding: 0.375rem 0.875rem;
		margin-bottom: 1rem;
	}

	.featured-info h3 {
		font-size: 1.75rem;
		color: var(--navy);
		margin-bottom: 0.375rem;
		font-weight: 700;
	}

	.member-role {
		font-size: 1rem;
		color: var(--red);
		font-style: italic;
		margin-bottom: 1.25rem;
	}

	.member-bio {
		font-size: 0.9375rem;
		line-height: 1.8;
		color: var(--muted);
	}

	/* ─── MEMBERS GRID ─── */
	.members-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
		gap: 1.5rem;
		list-style: none;
	}

	.member-card {
		background: var(--white);
		border: 1px solid var(--border);
		padding: 2rem 1.5rem;
		text-align: center;
		transition: transform 0.2s ease, box-shadow 0.2s ease;
	}

	.member-card:hover {
		transform: translateY(-2px);
		box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
	}

	.member-avatar {
		width: 100px;
		height: 100px;
		border-radius: 50%;
		overflow: hidden;
		border: 3px solid var(--white);
		box-shadow: 0 0 0 1px var(--border), 0 4px 12px rgba(0, 0, 0, 0.08);
		margin: 0 auto 1rem;
	}

	.member-avatar img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center top;
		display: block;
	}

	.member-card h4 {
		font-size: 0.9375rem;
		color: var(--navy);
		font-weight: 700;
		line-height: 1.3;
	}

	/* ─── CTA ─── */
	.cta-section {
		background: var(--navy-deep);
		color: var(--white);
		text-align: center;
		padding: 4rem 0;
	}

	.cta-section h2 {
		font-size: clamp(1.5rem, 3vw, 2rem);
		margin-bottom: 0.75rem;
		text-transform: uppercase;
		letter-spacing: 0.06em;
	}

	.cta-section p {
		color: rgba(255, 255, 255, 0.55);
		font-size: 1rem;
		font-style: italic;
		margin-bottom: 2rem;
	}

	.cta-buttons {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	/* ─── RESPONSIVE ─── */
	@media (max-width: 768px) {
		.featured-member {
			grid-template-columns: 1fr;
			gap: 1.5rem;
			padding: 2rem;
		}

		.featured-photo img {
			max-height: 320px;
			width: 100%;
		}

		.members-grid {
			grid-template-columns: repeat(2, 1fr);
			gap: 1rem;
		}
	}

	@media (max-width: 480px) {
		.members-grid {
			grid-template-columns: 1fr;
			max-width: 300px;
			margin: 0 auto;
		}

		.page-header {
			padding: 3rem 1.5rem 2.5rem;
		}

		.cta-buttons {
			flex-direction: column;
			align-items: center;
		}
	}
</style>
